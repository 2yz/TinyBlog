<div id="post-content"><h3><%=post.get('postTitle')%></h3></div>
<div><%-post.get('postContent')%></div>
<div id="post-comment">
	<h3>Comments</h3>
	<form class="form" role="login" action="/comment/<%=post.get('postId')%>" method="post">
		<div class="form-group">
			<input type="email" class="form-control" name="email" placeholder="Email">
		</div>
		<div class="form-group">
			<textarea class="form-control" rows="3" name="content" placeholder="Write your comment."></textarea>
		</div>
		<button type="submit" class="btn btn-default">Sign in</button>
		<a href="/signup" class="navbar-signup">Sign up</a>
	</form>
</div>
